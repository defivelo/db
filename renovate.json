{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "major": {
    "enabled": false
  },
  "pip-compile": {
    "fileMatch": [
      "(^|/)[\\w-]*requirements((-|/)\\w+)?\\.txt$"
    ]
  },
  "pip_requirements": {
    "enabled": false
  },
  "pip_setup": {
    "enabled": false
  },
  "constraints": {
    "python": "==3.11"
  }
}
