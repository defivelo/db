{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "major": {
    "enabled": false
  },
  "pip_requirements": {
    "description": "Configuration object for the pip_requirements manager",
    "type": "object",
    "default": {
      "fileMatch": [
        "(^|/)[\\w-]*requirements((-|/)\\w+)?\\.(txt|pip)$"
      ]
    },
    "$ref": "#"
  }
}
